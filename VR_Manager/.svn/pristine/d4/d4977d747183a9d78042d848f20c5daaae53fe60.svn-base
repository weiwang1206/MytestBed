package com.testbed.database;

/**
 * Contains constant values representing various objects in TestBed. 
 */
public class TestBedGlobals {
	
	//Constant values
	/*tables store object*/
	public static final int EXPERIMENT = 0;
	public static final int PHYMACHINE = 1;
	public static final int VIRTUALROUTER = 2;
	public static final int PORT = 3;
	public static final int USER = 4;

